package Lec3_Scanner;
import java.util.Scanner;
public class Exercise3 {
    public static void main(String[] args) {
        simpleConsoleOutput();
        consoleInput();
        readingIntegers();
        readingDoubles();
        readingBooleans();
        nhapTenDayDu();
        thongTinNguoiDung();
        docThongTinNguoiDung();
        nhapSoVaCau();
        tachTuBangDauPhay();
    }

    public static void simpleConsoleOutput() {
        int number = 42;
        System.out.println("The answer to everything is " + number);
    }

    public static void consoleInput() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter your name: ");
        String name = scanner.nextLine();
        System.out.print("Enter your age: ");
        int age = scanner.nextInt();
        System.out.println("Hello " + name + ", you are " + age + " years old.");
        scanner.nextLine(); 
    }

    public static void readingIntegers() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter first integer: ");
        int num1 = scanner.nextInt();
        System.out.print("Enter second integer: ");
        int num2 = scanner.nextInt();
        System.out.println("The sum is: " + (num1 + num2));
        scanner.nextLine(); 
    }

    public static void readingDoubles() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter first float number: ");
        double num1 = scanner.nextDouble();
        System.out.print("Enter second float number: ");
        double num2 = scanner.nextDouble();
        double average = (num1 + num2) / 2;
        System.out.println("The average is: " + average);
        scanner.nextLine(); 
    }

    public static void readingBooleans() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter a boolean value (true/false): ");
        boolean value = scanner.nextBoolean();
        System.out.println("You entered: " + value);
        scanner.nextLine(); 
    }

    public static void nhapTenDayDu() {
        Scanner ten = new Scanner(System.in);
        System.out.print("Ho va ten : ");
        String fullten = ten.nextLine();
        System.out.println("Ten day du la : " + fullten);
    }
    
    public static void thongTinNguoiDung() {
        Scanner sc = new Scanner(System.in);
        System.out.print("Thong tin nguoi dung : ");
        String thongtin = sc.nextLine();
        System.out.println("Day du thong tin : " + thongtin);
    }
    
    public static void docThongTinNguoiDung() {
        Scanner sc = new Scanner(System.in);
        System.out.print("Doc thong tin nguoi dung : ");
        while (sc.hasNext()) {
            String thongtin = sc.next();
            System.out.println("Thong tin : " + thongtin);
            if (thongtin.equalsIgnoreCase("exit")) 
            break; 
        }
    }
    public static void nhapSoVaCau() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter an integer : ");
        int number = scanner.nextInt();
        scanner.nextLine(); 
        System.out.print("Enter a sentences : ");
        String sentences = scanner.nextLine();
        System.out.println("Number " + number);
        System.out.println("Sentences " + sentences);
    }
    public static void tachTuBangDauPhay() {
        Scanner scanner = new Scanner(System.in);
        scanner.useDelimiter(",|\\n");
        System.out.println("Nhap cac tu duoc phan cach bang dau phay: ");
        while (scanner.hasNext()) {
            String moi = scanner.next();
            System.out.println("Danh sach duoc phan cach: " + moi.trim());
        }
        scanner.close();
    }
}
